<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:elevation="20dp"
    android:layout_marginTop="50dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    tools:context=".views.LookUpResultFragment">

    <ImageView
        android:id="@+id/search_result_card"
        android:layout_width="150dp"
        android:layout_height="300dp"/>

    <TextView
        android:text="Card Name:"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="160dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAlignment="viewEnd"/>

    <TextView
        android:id="@+id/search_result_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20sp"/>

    <TextView
        android:text="Card Number:"
        android:layout_marginTop="65sp"
        android:layout_marginLeft="160dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAlignment="viewEnd"/>

    <TextView
        android:id="@+id/search_result_number"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="65sp"/>

    <TextView
        android:text="Card Kanji:"
        android:layout_marginTop="115sp"
        android:layout_marginLeft="160dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAlignment="viewEnd"/>

    <TextView
        android:id="@+id/search_result_kanji"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="115sp"/>

    <TextView
        android:text="Card Romanji:"
        android:layout_marginTop="165sp"
        android:layout_marginLeft="160dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAlignment="viewEnd"/>

    <TextView
        android:id="@+id/search_result_romanji"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="165sp"/>

    <TextView
        android:text="Manga Chapter:"
        android:layout_marginTop="215sp"
        android:layout_marginLeft="160dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAlignment="viewEnd"/>

    <TextView
        android:id="@+id/search_result_manga"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="215sp"/>

    <TextView
        android:text="Anime Episode:"
        android:layout_marginTop="265sp"
        android:layout_marginLeft="160dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAlignment="viewEnd"/>

    <TextView
        android:id="@+id/search_result_anime"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="265sp"/>


</androidx.cardview.widget.CardView>